def cosmetics():
    #Function to add a COSMETIC....
    def addcos():
        print("\n")
        print("ğŸ˜‡ğŸ™ƒ"*15)
        print("\n")
        code = input("What's the Code of the Cosmetic You want to add : ")
        cname = input("Enter Cosmetic's Name : ")
        manufacturer = input("Enter Name of Manufacturer : ")
        dateofm = input("Enter Date of Manufacture : ")
        dateofexp = input("Enter Date of Expiry : ")
        weight_in_gm = eval(input("Enter Weight of Cosmetic (in grams) : "))
        ctype = input("Enter Which Type of Cosmetic it is (cream, foundation,lotion,lipstick,lipbalm,hair_serum,etc) : ")
        price = eval(input("Enter Price of Cosmetic : "))
        qty = int(input("Enter The Available Quantity : "))
        print("\nSTORING COSMETIC'S DETAILS.......")
        time.sleep(2)
        q = "insert into cosmetics_store values(%s,%s,%s,%s,%s,%s,%s,%s,%s)"
        data = (code,cname,manufacturer,dateofm,dateofexp,weight_in_gm,ctype,price,qty)
        cr = mydb.cursor()
        cr.execute(q,data)
        print("\nCosmetic Deatils Inserted.......!!!!")
        time.sleep(1)
        print("ğŸ‘ğŸ˜"*15)
        print("\n")
        mydb.commit()

    #Function to Restock a cosmetic
    def restockcos():
        aid = input("Enter the COSMETIC'S CODE : ")
        qty = input("Enter the Quantity to Add : ")
        q = "update cosmetics_store set QUANTITY = QUANTITY + %s where code = %s"
        d = (qty,aid)
        cr = mydb.cursor()
        cr.execute(q,d)
        print("\n")
        print("ğŸ˜ğŸ˜„"*12)
        print("COSMETIC Restocked......!!")
        print("ğŸ˜ğŸ˜„"*12)
        print("\n")
        mydb.commit()
