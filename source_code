def shoe():
    #FUNCTION TO ADD A shoe
    def addshoe():
        print("\n")
        print("ğŸ˜‡ğŸ™ƒ"*15)
        print("\n")
        scode = input("What's the Code of the Shoe You want to add : ")
        stype = input("Enter which type of footwear is it (shoes,sandals,flat,slippers,heels,sneakers,etc..) : ")
        brand = input("Enter Name of The Brand : ")
        dateofpur = input("Enter Date of Purchase : ")
        s_size = eval(input("Enter Size of The Footwear (4,5,6,7,8,etc) : "))
        stock = int(input("How Many Shoes Are There in Stock : "))
        scolor = input("enter the color of the Footwear : ")
        price = eval(input("Enter Price of Shoe : "))
        print("\nSTORING SHOE'S DETAILS.......")
        time.sleep(2)
        q = "insert into SHOE_STORE values(%s,%s,%s,%s,%s,%s,%s,%s)"
        data = (scode,stype,brand,dateofpur,s_size,stock,scolor,price)
        cr = mydb.cursor()
        cr.execute(q,data)
        print("\nShoe Deatils Inserted.......!!!!")
        time.sleep(1)
        print("ğŸ‘ğŸ˜"*15)
        print("\n")
        mydb.commit()
    #Function to Restock a Shoe
    def restockshoe():
        aid = input("Enter the SHOE'S CODE : ")
        qty = input("Enter the Quantity to Add : ")
        q = "update shoe_store set stock = stock + %s where scode = %s"
        d = (qty,aid)
        cr = mydb.cursor()
        cr.execute(q,d)
        print("\n")
        print("ğŸ˜ğŸ˜„"*12)
        print("Shoe Restocked......!!")
        print("ğŸ˜ğŸ˜„"*12)
        print("\n")
        mydb.commit()
    #FUNCTION TO SHOW ALL SHOE DETAILS......
    def showshoe():
        print("ğŸ¤©ğŸ˜„"*15)
        q = "select * from SHOE_STORe"
        cr = mydb.cursor()
        cr.execute(q)
        res = cr.fetchall()
        print("\n")
        print("-"*170)
        print("Code\tType\t\tManuf.\t\tDate_of_Pur.\t\tSize\t\tQty\t\tColor\t\tPrice")
        print("-"*170)
        for k in res:
            print(k[0],"\t",k[1],"\t\t",k[2],"\t\t",k[3],"\t\t",k[4],"\t\t",k[-3],"\t\t",k[-2],"\t\t",k[-1])
            print("-"*170)
        print("\n")
    #Function to search a Shoe
    def searchshoe():
        cid = input("Enter the FOOTWEAR'S CODE : ")
        q = "select * from SHOE_STORE where scode = "+cid
        cr = mydb.cursor()
        cr.execute(q)
        k = cr.fetchone()
        if k == None:
            print("\nNo Footwear Found With This Code\n")
            print("ğŸ˜£ğŸ˜£"*15)
        else:
            print("\n Footwear Details Found......!!")
            print("ğŸ˜€ğŸ˜€"*15)
            print("\n")
            print("-"*170)
            print("Code\tType\t\tManuf.\t\tDate_of_Pur.\t\tSize\t\tQty\t\tColor\t\tPrice")
            print("-"*170)
            print(k[0],"\t",k[1],"\t\t",k[2],"\t\t",k[3],"\t\t",k[4],"\t\t",k[-3],"\t\t",k[-2],"\t\t",k[-1])
            print("-"*170)
        print()

    #function to delete a Shoe
    def deleteshoe():
        cid = input("Enter the Code of the Shoe to be Deleted : ")
        q = "delete from SHOE_STORE where scode = "+cid
        cr = mydb.cursor()
        cr.execute(q)
        print("\nShoe Deleted......!!\n")
        print("ğŸ˜’ğŸ˜’"*15)
        print("\n\n")
        mydb.commit()
    #function for billing of PRODUCTSS
    def billshoe():
        cname = input("Enter Customer's Name : ")
        date = input("Enter the Date of Purchase (in yyyy_mm-dd) : ")
        amount = 0
        cr = mydb.cursor()
        while True:
            code = input("Enter Shoe's code : ")
            q = "select * from Shoe_StOre where scode = "+code
            cr.execute(q)
            res = cr.fetchone()
            if res == None:
                print("\nNo Shoe Available With This ID\n")
                print("ğŸ˜£ğŸ˜£"*15)
            else:
                price = int(res[-1])
                print("Price of Shoe is : ",price)
                qty = int(input("How Many Piece of this Footwear You Want to Have For You : "))
                bill = price * qty
                amount += bill
                print("Amount for All Items are : ",amount)
                ans = input("Do You Want to Have More Footwears with you (YES/NO): ")
                if ans.lower() == "no":
                    print("Calculating Your Bill ....... ")
                    time.sleep(2)
                    break
        print("Total Bill Amount to be paid by MR./MISS ",cname," is : ",amount)
        q = "insert into bills values(%s,%s,%s,%s)"
        data = ('shoe_store',cname,date,amount)
        cr.execute(q,data)
        mydb.commit()

    #FUNCTION TO DISPLAY PREVIOUS BILLS
    def displayshoe():
        print("ğŸ¤©ğŸ˜„"*15)
        q = "select * from bills where Store_name = 'shoe_store'"
        cr = mydb.cursor()
        cr.execute(q)
        res = cr.fetchall()
        print("\n")
        print("-"*95)
        print("shop_name\tcustomer_name\t\tDate_of_Pur\t\tAmount")
        print("-"*95)
        for k in res:
            print(k[0],"\t",k[1],"\t\t",k[-2],"\t\t",k[-1])
            print("-"*95)
        print("\n")
        
    while True:
        print("ğŸ˜‡ğŸ™ƒ"*15)
        print("\t\t\tAL   FLAT  SPOTT")
        print("ğŸ˜‡ğŸ™ƒ"*15)
        print("\n")
        print("Press 1 - Add New shoe details to the Mart")
        print("Press 2 - Restock a shoe details")
        print("Press 3 - Show All shoe")
        print("Press 4 - Search a shoe's Details")
        print("Press 5 - Delete a shoe from the list")
        print("Press 6 - for Billing of Products")
        print("Press 7 - Display Previous Bills")
        print("press 8 - to Exit")
        print("\n")
        opt = int(input("Enter Your Choice : "))
        if opt == 1:
            addshoe()
        elif opt == 2:
            restockshoe()
        elif opt == 3:
            showshoe()
        elif opt == 4:
            searchshoe()
        elif opt == 5:
            deleteshoe()
        elif opt == 6:
            billshoe()
        elif opt == 7:
            displayshoe()
        elif opt == 8:
            print("THANKS FOR VISITING..!!")
            print("âœŒğŸ˜„"*15)
            print("\t\t Have a Branded and Royal Life Ahead")
            print("*"*95)
            break
        else:
            print("You're having only 8 options to choose -__-")
            break

def stationary():
    #FUNCTION TO ADD A STATIONARY
    def addstan():
        print("\n")
        print("ğŸ˜‡ğŸ™ƒ"*15)
        print("\n")
        sid = input("What's the Code of the Stationary You want to add : ")
        sname = input("Enter Stationary Name : ")
        manufacturer = input("Enter Manufacturer Name : ")
        dateofm = input("Enter Date of Manufacture : ")
        stype = input("Enter which type of  is it (pen,pencil,notebook,color pens,scale,graph,etc..) : ")
        price = eval(input("Enter Price of Stationary : "))
        qty = int(input("How Many Stationary Are There in Stock : "))
        print("\nSTORING STATIONARY'S DETAILS.......")
        time.sleep(2)
        q = "insert into Stationary values(%s,%s,%s,%s,%s,%s,%s)"
        data = (sid,sname,manufacturer,dateofm,stype,price,qty)
        cr = mydb.cursor()
        cr.execute(q,data)
        print("\nStationary Deatils Inserted.......!!!!")
        time.sleep(1)
        print("ğŸ‘ğŸ˜"*15)
        print("\n")
        mydb.commit()
    #Function to Restock a Stationary
    def restockstan():
        aid = input("Enter the STATIONARY'S CODE : ")
        qty = input("Enter the Quantity to Add : ")
        q = "update STATIONARY set qty = qty + %s where scode = %s"
        d = (qty,aid)
        cr = mydb.cursor()
        cr.execute(q,d)
        print("\n")
        print("ğŸ˜ğŸ˜„"*12)
