        print("-"*170)
        print("Code\tNAME\t\tManuf.\t\tDate_of_manu.\t\tDate_of_exp\t\tprice\t\tqty\t\tpet_type")
        print("-"*170)
        for k in res:
            print(k[0],"\t",k[1],"\t\t",k[2],"\t\t",k[3],"\t\t",k[4],"\t\t",k[-3],"\t\t",k[-2],"\t\t",k[-1])
            print("-"*170)
        print("\n")
    #Function to search a Pet_eatable
    def searchpet():
        cid = input("Enter the PET_EATABLE'S CODE : ")
        q = "select * from Pet_eatable where fcode = "+cid
        cr = mydb.cursor()
        cr.execute(q)
        k = cr.fetchone()
        if k == None:
            print("\nNo Pet_eatable Found With This Code\n")
            print("ğŸ˜£ğŸ˜£"*15)
        else:
            print("\n Pet_eatable Details Found......!!")
            print("ğŸ˜€ğŸ˜€"*15)
            print("\n")
            print("-"*170)
            print("Code\tNAME\t\tManuf.\t\tDate_of_manu.\t\tDate_of_exp\t\tprice\t\tqty\t\tpet_type")
            print("-"*170)
            print(k[0],"\t",k[1],"\t\t",k[2],"\t\t",k[3],"\t\t",k[4],"\t\t",k[-3],"\t\t",k[-2],"\t\t",k[-1])
            print("-"*170)
        print()

    #function to delete a Pet_eatable
    def deletepet():
        cid = input("Enter the Code of the Pet_eatable to be Deleted : ")
        q = "delete from Pet_eatable where fcode = "+cid
        cr = mydb.cursor()
        cr.execute(q)
        print("\nPet_eatable Deleted......!!\n")
        print("ğŸ˜’ğŸ˜’"*15)
        print("\n\n")
        mydb.commit()
    #function for billing of PRODUCTSS
    def billpet():
        cname = input("Enter Customer's Name : ")
        date = input("Enter the Date of Purchase (in yyyy_mm-dd) : ")
        amount = 0
        cr = mydb.cursor()
        while True:
            code = input("Enter Pet_eatable's code : ")
            q = "select * from Pet_eatable where fcode = "+code
            cr.execute(q)
            res = cr.fetchone()
            if res == None:
                print("\nNo Pet_eatable Available With This ID\n")
                print("ğŸ˜£ğŸ˜£"*15)
            else:
                price = int(res[-3])
                print("Price of Pet_eatable is : ",price)
                qty = int(input("How Many Piece of this Food You Want to Have For Your Pet : "))
                bill = price * qty
                amount += bill
                print("Amount for All Items are : ",amount)
                ans = input("Do You Want to Have More Items with you : ")
                if ans.lower() == "no":
                    print("Calculating Your Bill ....... ")
                    time.sleep(2)
                    break
        print("Total Bill Amount to be paid by MR./MISS ",cname," is : ",amount)
        q = "insert into bills values(%s,%s,%s,%s)"
        data = ('pet_eatable_store',cname,date,amount)
        cr.execute(q,data)
        mydb.commit()

    #FUNCTION TO DISPLAY PREVIOUS BILLS
    def displaypet():
        print("ğŸ¤©ğŸ˜„"*15)
        q = "select * from bills where Store_name = 'pet_eatable_store'"
        cr = mydb.cursor()
        cr.execute(q)
        res = cr.fetchall()
        print("\n")
        print("-"*95)
        print("shop_name\tcustomer_name\t\tDate_of_Pur\t\tAmount")
        print("-"*95)
        for k in res:
            print(k[0],"\t",k[1],"\t\t",k[-2],"\t\t",k[-1])
            print("-"*95)
        print("\n")
    
    while True:
