    #Function for making billl......
    def billcloth():
        cname = input("Enter Customer's Name : ")
        date = input("Enter the Date of Purchase (in yyyy_mm-dd) : ")
        amount = 0
        cr = mydb.cursor()
        while True:
            code = input("Enter Cloth code : ")
            q = "select * from cloth_store where code = "+code
            cr.execute(q)
            res = cr.fetchone()
            if res == None:
                print("\nNo Cloth Found With This ID\n")
                print("ğŸ˜£ğŸ˜£"*15)
            else:
                price = int(res[-2])
                print("Price of Cloth is : ",price)
                qty = int(input("How Many Piece of the Dress You Want to Have with you : "))
                bill = price * qty
                amount += bill
                print("Amount for All Items are : ",amount)
                ans = input("Do You Want to Have More Dress with you : ")
                if ans.lower() == "no":
                    print("Calculating Your Bill ....... ")
                    time.sleep(2)
                    break
        print("Total Bill Amount to be paid by MR./MISS ",cname," is : ",amount)
        q = "insert into bills values(%s,%s,%s,%s)"
        data = ('cloth_store',cname,date,amount)
        cr.execute(q,data)
        mydb.commit()
    #FUNCTION TO DISPLAY PREVIOUS BILLS
    def displaybills():
        print("ğŸ¤©ğŸ˜„"*15)
        q = "select * from bills where Store_name = 'cloth_store'"
        cr = mydb.cursor()
        cr.execute(q)
        res = cr.fetchall()
        print("\n")
        print("-"*95)
        print("shop_name\tcustomer_name\t\tDate_of_Pur\t\tAmount")
        print("-"*95)
        for k in res:
            print(k[0],"\t",k[1],"\t\t",k[-2],"\t\t",k[-1])
            print("-"*95)
        print("\n")
        
        
