#library import
import mysql.connector as sql
import time
import random as rd  

#setting connection
mydb = sql.connect(host = "localhost", user = "root", password = "")

#amking cursor
cr = mydb.cursor()

#creating database
q = "create database super_market"
cr.execute(q)
q = "use super_market"
cr.execute(q)

#medicine shop
q = '''create table medicine(mid integer primary key,
mname varchar(30) not null,
manufacturer varchar(50),
dateofm date,
dateofexp date not null,
mg float,
content varchar(100),
price float,
qty integer)'''
cr.execute(q)

#bakery
q = '''create table bakery(cid integer primary key,
cake varchar(30) not null,
flavour varchar(50),
dateofm date,
weight float,
content varchar(100),
price float)'''
cr.execute(q)

#cloth store
q = '''create table cloth_store(code integer primary key,
ctype varchar(30) not null,
brand varchar(50),
dateofpur date,
stock integer,
color varchar(20),
price float,
size char(5))'''
cr.execute(q)

#shoe store
q = '''create table shoe_store(scode integer primary key,
stype varchar(30) not null,
manufacturer varchar(50),
dateofpur date,
s_size varchar(10),
stock integer,
scolor varchar(20),
price float)'''
cr.execute(q)

#pet_eatable
q = '''create table pet_eatable(fcode integer primary key,
fname varchar(30) not null,
manufacturer varchar(50),
dateofm date,
dateofexp date not null,
weight float,
content varchar(100),
price float,
quantity integer,
pet_type varchar(25))'''
cr.execute(q)

#stationary
q = '''create table stationary(sid integer primary key,
sname varchar(30) not null,
manufacturer varchar(50),
dateofm date,
stype varchar(20) not null,
price float,
qty integer)'''
cr.execute(q)

#grocery
q = '''create table grocery(Pid integer primary key,
gname varchar(30) not null,
manufacturer varchar(50),
dateofm date,
dateofexp date not null,
gtype varchar(15),
content varchar(100),
price float,
quantity integer)'''
cr.execute(q)

#Cosmetics
q = '''create table cosmetics_store(code integer primary key,
cname varchar(30) not null,
manufacturer varchar(50),
dateofm date,
dateofexp date not null,
weight_in_gm float,
ctype varchar(16),
price float,
quantity integer)'''
cr.execute(q)

#Accessories
q = '''create table accessories(code integer primary key,
aname varchar(30) not null,
manufacturer varchar(50),
Atype varchar(20),
qty integer,
price float)'''
cr.execute(q)

#BILLS
q = '''create table bills(store_name varchar(15) not null,
cname varchar(20),
date_of_pur date,
amount float)'''
cr.execute(q)

mydb.commit()
print("DATABASE INITIALISED")

def medicine():
    #function to add a medicine       
    def addmedicine():
        print("\n")
        print("ğŸ˜‡ğŸ™ƒ"*15)
        print("\n")
        mid = input("Enter Medicine Id : ")
        name = input("Enter Medicine Name : ")
        mf = input("Enter Name of Manufacturer : ")
        dom = input("Enter Date of Manufacture : ")
        doe = input("Enter Date of Expiry : ")
        mg = input("Enter the Weight (in mg) : ")
        content = input("Enter Content : ")
        price = input("Enter the Price : ")
        qty = input("Enter the Quantity : ")
        print("\nSTORING MEDICINE DETAILS.......")
        time.sleep(2)
        q = "insert into medicine values(%s,%s,%s,%s,%s,%s,%s,%s,%s)"
        data = (mid,name,mf,dom,doe,mg,content,price,qty)
        cr = mydb.cursor()
        cr.execute(q,data)
        print("\nMedicine Inserted.......!!!!")
        print("ğŸ‘ğŸ˜"*15)
        print("\n")
        mydb.commit()

    #function to show a medicine
    def showmedicine():
        print("ğŸ¤©ğŸ˜„"*15)
        q = "select * from medicine"
        cr = mydb.cursor()
        cr.execute(q)
        res = cr.fetchall()
        print("\n")
        print("-"*95)
        print("Id\tName\t\tDate_of_Expiry\t\tPrice\t\tQty")
        print("-"*95)
        for k in res:
            print(k[0],"\t",k[1],"\t\t",k[4],"\t\t",k[-2],"\t\t",k[-1])
            print("-"*95)
        print("\n")

    #function to restock a medicine
    def restock():
        mid = input("Enter the Medicine ID : ")
        qty = input("Enter the Quantity to Add : ")
        q = "update medicine set qty = qty + %s where mid = %s"
        d = (qty,mid)
        cr = mydb.cursor()
        cr.execute(q,d)
        print("\n")
        print("ğŸ˜ğŸ˜„"*12)
        print("Medicine Restocked......!!")
        print("ğŸ˜ğŸ˜„"*12)
        print("\n")
        mydb.commit()

    #function to search a medicine
    def search():
        mid = input("Enter the Medicine ID : ")
        q = "select * from medicine where mid = "+mid
        cr = mydb.cursor()
        cr.execute(q)
        k = cr.fetchone()
        if k == None:
            print("\nNo Medicine Available With This ID\n")
            print("ğŸ˜£ğŸ˜£"*15)
        else:
            print("\nMedicine Found......!!")
            print("ğŸ˜€ğŸ˜€"*15)
            print("\n")
            print("-"*95)
            print("Id\tName\t\tDate_of_Expiry\t\tPrice\t\tQty")
            print("-"*95)
            print(k[0],"\t",k[1],"\t\t",k[4],"\t\t",k[-2],"\t\t",k[-1])
            print("-"*95)
        print()

    #Function to delete a medicine
    def deletem():
        mid = input("Enter the Medicine ID : ")
        q = "delete from medicine where mid = "+mid
        cr = mydb.cursor()
        cr.execute(q)
        print("\nMedicine Deleted......!!\n")
        print("ğŸ˜’ğŸ˜’"*15)
        print("\n\n")
        mydb.commit()

    #function for billing
    def billing():
        cname = input("Enter Customer's Name : ")
        date = input("Enter the Date of Purchase (in yyyy_mm-dd) : ")
        amount = 0
        cr = mydb.cursor()
        while True:
            mid = input("Enter Medicine id : ")
            q = "select * from medicine where mid = "+mid
            cr.execute(q)
            res = cr.fetchone()
            if res == None:
                print("\nNo Medicine Available With This ID\n")
                print("ğŸ˜£ğŸ˜£"*15)
            else:
                price = int(res[-2])
                print("Price of Medicine is : ",price)
                qty = int(input("Enter the Quantity to be Purchased : "))
                bill = price * qty
                amount += bill
                print("Amount for Medicine ",amount)
                ans = input("Are There More Medicine to be Purchased : ")
                if ans.lower() == "no":
                    print("Calculating Your Bill ")
                    break
        print("Total Bill Amount is : ",amount)
        q = "insert into bills values(%s,%s,%s,%s)"
        data = ('medical_store',cname,date,amount)
        cr.execute(q,data)
        mydb.commit()
        

    #FUNCTION TO DISPLAY PREVIOUS BILLS
    def displaymed():
        print("ğŸ¤©ğŸ˜„"*15)
        q = "select * from bills where Store_name = 'medical_store'"
        cr = mydb.cursor()
        cr.execute(q)
        res = cr.fetchall()
        print("\n")
        print("-"*95)
        print("shop_name\tcustomer_name\t\tDate_of_Pur\t\tAmount")
        print("-"*95)
        for k in res:
            print(k[0],"\t",k[1],"\t\t",k[-2],"\t\t",k[-1])
            print("-"*95)
        print("\n")
        
    while True:
        print("ğŸ˜‡ğŸ™ƒ"*15)
        print("\t\t\tAL Medical Store")
        print("ğŸ˜‡ğŸ™ƒ"*15)
        print("\n")
        print("Press 1 - Add New Medicine")
        print("Press 2 - Restock a Medicine")
        print("Press 3 - Show All Medicines")
        print("Press 4 - Search a Medicine")
        print("Press 5 - Delete a Medicine")
        print("Press 6 - Billing")
        print("Press 7 - Display Previous Bills")
        print("press 8 - to Exit")
        print("\n")
        opt = int(input("Enter Your Choice : "))
        if opt == 1:
            addmedicine()
        elif opt == 2:
            restock()
        elif opt == 3:
            showmedicine()
        elif opt == 4:
            search()
        elif opt == 5:
            deletem()
        elif opt == 6:
            billing()
        elif opt == 7:
            displaymed()
        elif opt == 8:
            print("THANKS FOR VISITING..!!")
            print("âœŒğŸ˜„"*15)
            print("\t\t Have a Medicine-Free Life Ahead")
            print("*"*95)
            break
        else:
            print("You're having only 8 options to choose -___-")
            break   
def accessories():
    #function to add an accessory
    def addacc():
        print("\n")
        print("ğŸ˜‡ğŸ™ƒ"*15)
        print("\n")
        aid = input("Enter Jewellery Id : ")
        name = input("Enter Jewellery Name : ")
        mf = input("Enter Name of the Manufacturer : ")
        jtype = input("Enter Which Type of Jewellery is this (ring, chain, neckalce, bangles, etc..) : ")
        qty = int(input("How Many Piece You Want to Add : "))
        price = input("Enter the Price : ")
        print("\nSTORING JEWELLERY DETAILS.......")
        time.sleep(2)
        q = "insert into accessories values(%s,%s,%s,%s,%s,%s)"
        data = (aid,name,mf,jtype,qty,price)
        cr = mydb.cursor()
        cr.execute(q,data)
        print("\nJewellery Deatils Inserted.......!!!!")
        print("ğŸ‘ğŸ˜"*15)
        print("\n")
        mydb.commit()

    #Function to restock a jewellery
    def restockacc():
        aid = input("Enter the JEWELLERY ID : ")
        qty = input("Enter the Quantity to Add : ")
        q = "update accessories set qty = qty + %s where code = %s"
        d = (qty,aid)
        cr = mydb.cursor()
        cr.execute(q,d)
        print("\n")
        print("ğŸ˜ğŸ˜„"*12)
        print("JEWELLERY Restocked......!!")
        print("ğŸ˜ğŸ˜„"*12)
        print("\n")
        mydb.commit()

    #function to show all jewellery
    def showacc():
        print("ğŸ¤©ğŸ˜„"*15)
        q = "select * from accessories"
