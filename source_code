def pet_eatable():
    #FUNCTION TO ADD A food product
    def addpet():
        print("\n")
        print("ğŸ˜‡ğŸ™ƒ"*15)
        print("\n")
        fcode = input("What's the Code of the Pet_eatable You want to add : ")
        fname = input("Enter Pet_eatable's Name : ")
        manufacturer = input("Enter Name of Manufacturer : ")
        dateofm = input("Enter Date of Manufacture : ")
        dateofexp = input("Enter Date of Expiry : ")
        weight = eval(input("Enter Weight of Pet_eatable (in grams) : " ))
        content = input("Enter Content of the Pet_eatable : ")
        price = eval(input("Enter Price of Pet_eatable : "))
        quantity = int(input("Enter The Available Quantity : "))
        pet_type = input("Enter for Which Animal This Pet_eatable is (dog,cat,tiger,lion,etc) : ")
        print("\nSTORING PET_EATABLE'S DETAILS.......")
        time.sleep(2)
        q = "insert into Pet_eatable values(%s,%s,%s,%s,%s,%s,%s,%s,%s,%s)"
        data = (fcode,fname,manufacturer,dateofm,dateofexp,weight,content,price,quantity,pet_type)
        cr = mydb.cursor()
        cr.execute(q,data)
        print("\nPet_eatable Deatils Inserted.......!!!!")
        time.sleep(1)
        print("ğŸ‘ğŸ˜"*15)
        print("\n")
        mydb.commit()
    #Function to Restock a Pet_eatable
    def restockpet():
        aid = input("Enter the PET_EATABLE'S CODE : ")
        qty = input("Enter the Quantity to Add : ")
        q = "update Pet_eatable set QUANTITY = QUANTITY + %s where fcode = %s"
        d = (qty,aid)
        cr = mydb.cursor()
        cr.execute(q,d)
        print("\n")
        print("ğŸ˜ğŸ˜„"*12)
        print("Pet_eatable Restocked......!!")
        print("ğŸ˜ğŸ˜„"*12)
        print("\n")
        mydb.commit()
    #FUNCTION TO SHOW ALL Pet_eatable......
    def showpet():
        print("ğŸ¤©ğŸ˜„"*15)
