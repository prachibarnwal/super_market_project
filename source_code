def bakery():
    #Function for adding an item to the menu ...
    def additem():
        print("\n")
        print("ğŸ˜‡ğŸ™ƒ"*15)
        print("\n")
        cid = input("What's the Code of the Dish You want to add : ")
        cake = input("Which type of Dish you want to add (cake/pizza/burger/pastry/chocolates/something else(name) : ")
        flavour = input("Enter Flavour of the Dish : ")
        dateofm = input("Enter Date of Manufacture : ")
        weight = input("Enter weight(in grams) : ")
        content = input("Enter Ingredients : ")
        price = input("Enter the Price : ")
        print("\nSTORING FOOD DETAILS.......")
        time.sleep(2)
        q = "insert into bakery values(%s,%s,%s,%s,%s,%s,%s)"
        data = (cid,cake,flavour,dateofm,weight,content,price)
        cr = mydb.cursor()
        cr.execute(q,data)
        print("\nDishh Deatils Inserted.......!!!!")
        time.sleep(1)
        print("ğŸ‘ğŸ˜"*15)
        print("\n")
        mydb.commit()
    #Function to refill ingredients or flavour
    def refillitem():
        cid = input("Enter the Code of the Dish whose ingredients/flavour you want to Change  : ")
        print("Press 1 - to change Flavour")
        print("Press 2 - to change their Ingredients")
        print("Press 3 - to goto the main menu")
        a = int(input("What do You want to do : "))
        if a == 1:
            flavour1 = input("What's the new flavour to be replaced : ")
            q = "update bakery set flavour = %s where cid = %s"
            d = (flavour1,cid)
            cr = mydb.cursor()
            cr.execute(q,d)
            print("\n")
            print("ğŸ˜ğŸ˜„"*12)
            print("FLAVOUR   CHANGED......!!")
            print("ğŸ˜ğŸ˜„"*12)
            print("\n")
            mydb.commit()
            
        elif a == 2:
            content1 = input("What's the new Ingredients to be replaced : ")
            q = "update bakery set content = %s where code = %s"
            d = (content1,cid)
            cr = mydb.cursor()
            cr.execute(q,d)
            print("\n")
            print("ğŸ˜ğŸ˜„"*12)
            print("INGREDIENTS   UPDATED......!!")
            print("ğŸ˜ğŸ˜„"*12)
            print("\n")
            mydb.commit()
            
        else:
            print("\n")
            
    #Function to show all dish detailss
    def showitems():
        print("ğŸ¤©ğŸ˜„"*15)
        q = "select * from bakery"
        cr = mydb.cursor()
        cr.execute(q)
        res = cr.fetchall()
        print("\n")
        print("-"*95)
        print("Code\tName\t\tflavour\t\tweight\t\tPrice")
        print("-"*95)
        for k in res:
            print(k[0],"\t",k[1],"\t\t",k[2],"\t\t",k[-3],"\t\t",k[-1])
            print("-"*95)
        print("\n")

    #Function to search a dish
    def searchitem():
        cid = input("Enter the DISH'S CODE : ")
        q = "select * from bakery where cid = "+cid
        cr = mydb.cursor()
        cr.execute(q)
        k = cr.fetchone()
        if k == None:
            print("\nNo Dish Found With This Code\n")
            print("ğŸ˜£ğŸ˜£"*15)
        else:
            print("\nDish Found......!!")
            print("ğŸ˜€ğŸ˜€"*15)
            print("\n")
            print("-"*95)
            print("Code\tName\t\tflavour\t\tweight\t\tPrice")
            print("-"*95)
            print(k[0],"\t",k[1],"\t\t",k[2],"\t\t",k[-3],"\t\t",k[-1])
            print("-"*95)
        print()

    #FUNCTION TO DELETE A DISH'S DETAIL
    def deleteitem():
        cid = input("Enter the Code of the Dish to be Deleted : ")
        q = "delete from bakery where cid = "+cid
        cr = mydb.cursor()
        cr.execute(q)
        print("\nDish Deleted......!!\n")
        print("ğŸ˜’ğŸ˜’"*15)
        print("\n\n")
        mydb.commit()

    #Function for making billl......
    def billitem():
        cname = input("Enter Customer's Name : ")
        date = input("Enter the Date of Purchase (in yyyy_mm-dd) : ")
        amount = 0
        cr = mydb.cursor()
        while True:
            code = input("Enter Dish code : ")
            q = "select * from bakery where cid = "+code
            cr.execute(q)
            res = cr.fetchone()
            if res == None:
                print("\nNo Dish Found With This ID\n")
                print("ğŸ˜£ğŸ˜£"*15)
            else:
                price = int(res[-1])
                print("Price of Dish is : ",price)
                qty = int(input("How Many Piece of the Item You Want to Have : "))
                bill = price * qty
                amount += bill
                print("Amount for All Items are : ",amount)
                ans = input("Do You Want to Have More Food in Your House : ")
                if ans.lower() == "no":
                    print("Calculating Your Bill ....... ")
                    time.sleep(2)
                    break
        print("Total Bill Amount to be paid by MR./MISS ",cname," is : ",amount)
        q = "insert into bills values(%s,%s,%s,%s)"
        data = ('bakery',cname,date,amount)
        cr.execute(q,data)
        mydb.commit()
    #FUNCTION TO DISPLAY PREVIOUS BILLS
    def displaybill():
        print("ğŸ¤©ğŸ˜„"*15)
        q = "select * from bills where Store_name = 'bakery'"
        cr = mydb.cursor()
        cr.execute(q)
        res = cr.fetchall()
        print("\n")
        print("-"*95)
        print("shop_name\tcustomer_name\t\tDate_of_Pur\t\tAmount")
        print("-"*95)
        for k in res:
            print(k[0],"\t",k[1],"\t\t",k[-2],"\t\t",k[-1])
            print("-"*95)
        print("\n")
        
        
    while True:
        print("ğŸ˜‡ğŸ™ƒ"*15)
        print("\t\t\tAL Bakery Corner")
        print("ğŸ˜‡ğŸ™ƒ"*15)
        print("\n")
        print("Press 1 - Add New Item to the Menu")
        print("Press 2 - Refill an item")
        print("Press 3 - Show All Eatables")
        print("Press 4 - Search an Cake/Pizza/Burger")
        print("Press 5 - Delete an Eatable Details")
        print("Press 6 - for Billing of Items")
        print("Press 7 - Display Previous Bills")
        print("press 8 - to Exit")
        print("\n")
        opt = int(input("Enter Your Choice : "))
        if opt == 1:
            additem()
        elif opt == 2:
            refillitem()
        elif opt == 3:
            showitems()
        elif opt == 4:
            searchitem()
        elif opt == 5:
            deleteitem()
        elif opt == 6:
            billitem()
        elif opt == 7:
            displaybill()
        elif opt == 8:
            print("THANKS FOR VISITING..!!")
            print("âœŒğŸ˜„"*15)
            print("\t\t Have a Sweet Life Ahead")
            print("*"*95)
            break
        else:
            print("You're having only 8 options to choose -__-")
            break

def clothes():
    #FUNCTION FOR ADDING A CLOTH
    def addcloth():
        print("\n")
        print("ğŸ˜‡ğŸ™ƒ"*15)
        print("\n")
        code = input("What's the Code of the Cloth You want to add : ")
        ctype = input("Enter Which Type of Cloth it is ('jeans','top','t-shirts','dresses','lehanga','sherwani',or something else) : ")
        brand = input("Enter Cloth's Brand Name : ")
        dateofpur = input("Enter the Date of Purchase of Cloth : ")
        stock = int(input("Enter the Amount of Cloth Available : "))
        color = input("Enter Color of The Dress : " )
        price = eval(input("Enter Cloth's Price : "))
        size = input("Enter Size of the Dress (XXS,XS,S,M,L,XL,XXL,etc..) : ")
        print("\nSTORING CLOTH DETAILS.......")
        time.sleep(2)
        q = "insert into cloth_store values(%s,%s,%s,%s,%s,%s,%s,%s)"
        data = (code,ctype,brand,dateofpur,stock,color,price,size)
        cr = mydb.cursor()
        cr.execute(q,data)
        print("\nCloth Deatils Inserted.......!!!!")
        time.sleep(1)
        print("ğŸ‘ğŸ˜"*15)
        print("\n")
        mydb.commit()

    #Function for restocking a cloth
    def restockcloth():
        aid = input("Enter the CLOTH'S CODE : ")
        qty = input("Enter the Quantity to Add : ")
        q = "update cloth_store set stock = stock + %s where code = %s"
        d = (qty,aid)
        cr = mydb.cursor()
        cr.execute(q,d)
        print("\n")
        print("ğŸ˜ğŸ˜„"*12)
        print("CLOTH  Restocked......!!")
        print("ğŸ˜ğŸ˜„"*12)
        print("\n")
        mydb.commit()
    #Function to show all Cloth Details....
    def showclothes():
        print("ğŸ¤©ğŸ˜„"*15)
        q = "select * from cloth_store"
        cr = mydb.cursor()
        cr.execute(q)
        res = cr.fetchall()
        print("\n")
        print("-"*95)
        print("Code\tType\t\tBrand\t\tStock\t\tPrice\t\tSize")
        print("-"*120)
        for k in res:
            print(k[0],"\t",k[1],"\t\t",k[2],"\t\t",k[-4],"\t\t",k[-2],"\t\t",k[-1])
            print("-"*120)
        print("\n")

    #Function to search a Cloth
    def searchcloth():
        cid = input("Enter the CLOTH'S CODE : ")
        q = "select * from cloth_store where code = "+cid
        cr = mydb.cursor()
        cr.execute(q)
        k = cr.fetchone()
        if k == None:
            print("\nNo Cloth Found With This Code\n")
            print("ğŸ˜£ğŸ˜£"*15)
        else:
            print("\nCloth Details Found......!!")
