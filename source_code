                    print("Calculating Your Bill ....... ")
                    time.sleep(2)
                    break
        print("Total Bill Amount to be paid by MR./MISS ",cname," is : ",amount)
        q = "insert into bills values(%s,%s,%s,%s)"
        data = ('accessory_shop',cname,date,amount)
        cr.execute(q,data)
        mydb.commit()
        
    #FUNCTION TO DISPLAY PREVIOUS BILLS
    def displaybill():
        print("ğŸ¤©ğŸ˜„"*15)
