            print(k[0],"\t",k[1],"\t\t",k[4],"\t\t",k[-3],"\t\t",k[-1])
            print("-"*95)
        print()

    #Function to delete a jewellery
    def deleteacc():
        aid = input("Enter the Code of the Jewellery to be Deleted : ")
        q = "delete from accessories where code = "+aid
        cr = mydb.cursor()
        cr.execute(q)
        print("\nAccessory Deleted......!!\n")
        print("ğŸ˜’ğŸ˜’"*15)
        print("\n\n")
        mydb.commit()
    #function for billing of accessories..
    def billacc():
        cname = input("Enter Customer's Name : ")
        date = input("Enter the Date of Purchase (in yyyy_mm-dd) : ")
        amount = 0
        cr = mydb.cursor()
        while True:
            code = input("Enter Accessory code : ")
            q = "select * from accessories where code = "+code
